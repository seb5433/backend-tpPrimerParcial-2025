<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
   <persistence-unit name="EcommerceBD">
      <jta-data-source>java:jboss/datasources/parcial</jta-data-source>
      <class>py.com.progweb.parcial.model.Producto</class>
      <class>py.com.progweb.parcial.model.Categoria</class>
      <class>py.com.progweb.parcial.model.Cliente</class>
      <class>py.com.progweb.parcial.model.Venta</class>
      <class>py.com.progweb.parcial.model.DetalleVenta</class>
      <properties>
         <property name="hibernate.id.new_generator_mappings" value="true"/>
         <property name="hibernate.show_sql" value="true" />
         <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
         
      </properties>
   </persistence-unit>
</persistence>
